<%= render "shared/header" %>
<%= form_with model:@user, url:user_session_path, class: "session-main", local: true do |f| %>
  <div class="form-header">
    <h1 class="form-header-text">ログインページ</h1>
  </div>
  <div class="session-wrap">
    <div class="form-text-wrap">
      <%= f.label :email %><br />
      <%= f.email_field :email, class:"input-default", autofocus: true, autocomplete: "email" %>
    </div>

    <div class="form-text-wrap">
      <%= f.label :password %><br />
      <%= f.password_field :password, class:"input-default", autocomplete: "current-password" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="form-text-wrap">
        <%= f.label :remember_me %>
        <%= f.check_box :remember_me, class:"check-default"%>
      </div>
    <% end %>
  <%= render "shared/links" %>
  </div>

    <div class="session-red-btn">
      <%= f.submit "Log in", class:"session-btn"%>
    </div>
  <% end %>
<%= render "shared/footer" %>
