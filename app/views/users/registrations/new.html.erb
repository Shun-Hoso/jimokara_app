<%= form_with model:@user, url:user_registration_path, class: 'registration-main', local: true do |f| %>
  <%= render "users/shared/error_messages", resource: f.object %>

  <div class="img-upload">
    <div class="weight-bold-text">
      Plofile photo
      <span class="required">任意</span>
    </div>
    <div id="previews"></div>

    <div class="click-upload">
      <p>クリックしてファイルをアップロード</p>
      <%= f.file_field :images, name: {}, class:"profile-photo", data: {index: 0} %>
    </div>
  </div>

  <div class="form-wrap">
    <div class="form-header">
      <h1 class="form-header-text">会員情報入力</h1>
    </div>
    <div class="form-group">
      <div class="form-text-wrap">
        <label class="form-text">Nickname</label>
        <span class="required">必須</span>
      </div>
      <%= f.text_area :nickname, class:"input-default", id:"nickname", placeholder:"例） Jimokara太郎", maxlength:"30" %>
    </div>

    <div class="form-group">
      <div class="form-text-wrap">
        <label class="form-text">Email</label>
        <span class="required">必須</span>
      </div>
      <%= f.email_field :email, class:"input-default", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
    </div>

    <div class="form-group">
      <div class="form-text-wrap">
        <label class="form-text">Password</label>
        <span class="required">必須</span>
      </div>
      <%= f.password_field :password, class:"input-default", id:"password", placeholder:"6文字以上の半角英数字" %>
      <p class="info-text">※英字と数字の両方を含めて設定してください</p>
    </div>

    <div class="form-group">
      <div class="form-text-wrap">
        <label class="form-text">Password for confirmation</label>
        <span class="required">必須</span>
      </div>
      <%= f.password_field :password_confirmation, class:"input-default", id:"password-confirmation", placeholder:"同じパスワードを入力してください" %>
    </div>

    <div class="form-group">
      <div class="form-text-wrap">
        <label class="form-text">Phone number</label>
        <span class="required">必須</span>
      </div>
      <%= f.text_field :phone_number, class:"input-default", id:"phone-number", placeholder:"例）08011112222", maxlength:"11" %>
    </div>

    <div class="form-group">
      <div class="form-text-wrap">
        <label class="form-text">Generation</label>
        <span class="required">任意</span>
      </div>
      <%= f.collection_select(:generation_id, [], {}, {}, {include_blank: "---"}, {class:"select-box", id:"generaion"}) %>
    </div>

    <div class="form-group">
      <div class="form-text-wrap">
        <label class="form-text">Address</label>
        <span class="required">必須</span>
      </div>
      <%= f.collection_select(:address_id, [], {}, {}, {include_blank: "---"}, {class:"select-box", id:"generaion"}) %>
    </div>

    <div class="form-group">
      <div class="form-text-wrap">
        <label class="form-text">Free comment</label>
        <span class="required">任意</span>
      </div>
      <%= f.text_area :free_comment, class:"input-default", id:"free-comment", placeholder:"200文字以内でご入力ください", maxlength:"200" %>
    </div>

    <div class="form-group">
      <h2 class="form-bottom-text">
        「Sign up」ボタンを押すことにより、
        <span>利用規約</span>
        <br>に同意したものとみなします
      </h2>
    </div>
    <div class="register-btn">
      <%= f.submit "Sign up", class:"register-btn"%>
    </div>
  </div>
<% end %>

